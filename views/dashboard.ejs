    <script src="./js/transitonAnimation.js"></script>

    <script>
        var optionsTerapias = {
            series: [{ name: "Reportes", data: [10, 15, 8, 12, 20, 14] }],
            chart: { type: "bar", height: 200 },
            plotOptions: { bar: { borderRadius: 4, columnWidth: "50%" } },
            dataLabels: { enabled: false },
            xaxis: { categories: ["Ene", "Feb", "Mar", "Abr", "May", "Jun"] },
            fill: {
                type: "gradient",
                gradient: {
                    shade: "light",
                    type: "vertical",
                    shadeIntensity: 0.5,
                    gradientToColors: ["#5ba0f9"],
                    inverseColors: false,
                    opacityFrom: 1,
                    opacityTo: 1,
                    stops: [0, 100]
                }
            },
            colors: ["#1b5cef"]
        };
        var optionsPacientes = {
            chart: { type: "area", height: 250 },
            series: [{ name: "Pacientes", data: [120, 75, 30] }],
            xaxis: {
                categories: ["Pacientes nuevos", "Pacientes recurrentes", "Pacientes inactivos"],
                labels: { style: { colors: "#000000" } }
            },
            colors: ["#2261ee"],
            legend: { position: "bottom", labels: { colors: "#2261ee" } },
            dataLabels: { enabled: true, style: { colors: ["#2261ee"] } },
            stroke: { curve: "smooth" },
            fill: {
                type: "gradient",
                gradient: {
                    shadeIntensity: 1,
                    opacityFrom: 0.5,
                    opacityTo: 0,
                    colorStops: [
                        { offset: 0, color: "#2261ee", opacity: 0.4 },
                        { offset: 100, color: "#ffffff", opacity: 0.4 }
                    ]
                }
            }
        };

        var chartTerapias = new ApexCharts(document.querySelector("#chartTerapias"), optionsTerapias);
        chartTerapias.render();
        var chartPacientes = new ApexCharts(document.querySelector("#chartPacientes"), optionsPacientes);
        chartPacientes.render();

    </script>
