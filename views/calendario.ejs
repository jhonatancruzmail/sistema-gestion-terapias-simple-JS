<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Calendario | CRM Terapia</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css' rel='stylesheet' />
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js'></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter&display=swap" rel="stylesheet" />
    <style>
        body {
            font-family: "Inter", sans-serif;
            font-optical-sizing: auto;
        }

        .fc-toolbar-title {
            font-size: 1.5rem;
            color: #3a81f5;
            font-weight: bold;
        }

        .fc-button {
            background: linear-gradient(to bottom, #2564eb, #3a81f5) !important;
            border: none !important;
            color: white !important;
            font-weight: bold;
            border-radius: 0.5rem !important;
            margin: 0 4px !important;
            padding: 8px 12px !important;
        }

        .fc-button:hover {
            background: linear-gradient(to bottom, #2563eb, #1e3a8a) !important;
        }

        .fc-daygrid-day-number {
            color: #2563eb !important;
            font-weight: bold;
        }

        .fc-event {
            background-color: #2564eb !important;
            border: none !important;
            border-radius: 0.5rem !important;
            color: white !important;
            padding: 5px;
        }

        .fc-day-today {
            background: rgba(59, 130, 246, 0.2) !important;
            border-radius: 0.5rem !important;
        }
    </style>
</head>

<body class="bg-[#e6ebee]" style="background-color: #eff4f6">
    <%- include("./partials/nav.ejs") %>

    <div class="px-7 py-8">
        <div class="bg-white p-8 rounded-3xl shadow-md">
            <h1 class="text-3xl font-bold text-blue-600 pb-6">Calendario de citas</h1>
            <div id='calendar'></div>
        </div>
    </div>

    <script src="./js/transitonAnimation.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay,listWeek'
                },
                views: {
                    listWeek: { buttonText: 'Agenda' },
                    timeGridDay: { buttonText: 'Dia' },
                    timeGridWeek: { buttonText: 'Semana' },
                    dayGridMonth: { buttonText: 'Mes' },
                },
                events: [
                    { title: 'Consulta Juan Pérez', date: '2025-03-08' },
                    { title: 'Consulta Juan Pérez', date: '2025-03-10' },
                    { title: 'Consulta María López', date: '2025-03-14' },
                    { title: 'Consulta inicial', start: '2025-03-16T10:00:00', end: '2025-03-16T12:00:00' }
                ]
            });

            calendar.render();
        });
    </script>
</body>

</html>